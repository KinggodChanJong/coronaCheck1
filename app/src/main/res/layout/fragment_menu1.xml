<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"

        android:weightSum="4">
        <TextView
            android:id="@+id/tv_home_frag_patient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="확진환자"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_home_frag_inspection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="검사진행"
            android:textColor="@color/colorText"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_frag_safe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="격리해제"
            android:textColor="@color/colorText"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_home_frag_die"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="사망자"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_home_frag_patient_num"
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="111111"
            android:textSize="20dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_home_frag_inspection_num"
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="222222"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_frag_safe_num"
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="333333"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_frag_die_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorText"
            android:text="444444"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_home_frag_patient_yesterday"
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_frag_inspection_yesterday"
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_frag_safe_yesterday"
            android:layout_width="0dp"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_frag_die_yesterday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3214"
            android:textColor="@color/colorText"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_home_frag_inspection_yesterday"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp" />

</LinearLayout>