<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="확진환자"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/yaregular"/>
        <TextView
            android:id="@+id/tv_check_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="검사진행"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_safe_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="격리해제"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_die_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="사망자"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="111111"
            android:textSize="20dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_check_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="222222"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_safe_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="333333"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_die_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="444444"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_title_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_check_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_safe_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_die_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3214"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:layout_weight="1"/>

    </LinearLayout>




    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_home_black_24dp"/>




</LinearLayout>