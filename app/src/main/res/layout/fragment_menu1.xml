<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_news_item"
        cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:background="@color/colorCardBack">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorCardBack"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:weightSum="4">
                <TextView
                    android:id="@+id/tv_home_frag_patient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="확진환자"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorText"
                    android:textSize="20dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_home_frag_inspection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="검사진행"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="3dp"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_home_frag_safe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="격리해제"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="3dp"
                    android:textSize="20dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_home_frag_die"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="사망자"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorText"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:weightSum="4">
                <TextView
                    android:id="@+id/tv_home_frag_patient_num"
                    android:layout_width="0dp"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="111111"
                    android:textSize="20dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_home_frag_inspection_num"
                    android:layout_width="0dp"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="222222"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_home_frag_safe_num"
                    android:layout_width="0dp"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="333333"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_home_frag_die_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:text="444444"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:weightSum="4">
                <TextView
                    android:id="@+id/tv_home_frag_patient_yesterday"
                    android:layout_width="0dp"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:text="3214"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_home_frag_inspection_yesterday"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:text="3214"
                    android:layout_marginBottom="5dp"
                    android:textSize="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_home_frag_safe_yesterday"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:text="3214"
                    android:layout_marginBottom="5dp"
                    android:textSize="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_home_frag_die_yesterday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3214"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="5dp"
                    android:textSize="10dp"
                    android:layout_weight="1"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_chart"
        cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:background="@color/colorCardBack">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_home_frag_inspection_yesterday"
            android:background="@color/colorCardBack"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>