<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_report_item"
        cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_report_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:text="도시 이름"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_report_item_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_report_item_title"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="누적 확진자수"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_report_item_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_report_item_patient"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="전일 대비 증가"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_report_item_death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_report_item_daily"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="사망자"
                android:textSize="15dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>